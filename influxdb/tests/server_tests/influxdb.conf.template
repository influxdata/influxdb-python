[meta]
  dir = "{meta_dir}"
  hostname = "localhost"
  bind-address = ":{meta_port}"

[data]
  dir = "{data_dir}"
  wal-dir = "{wal_dir}"

[admin]
  enabled = true
  bind-address = ":{admin_port}"

[http]
  enabled = true
  bind-address = ":{http_port}"
  auth-enabled = {auth_enabled}
  log-enable = true

[[udp]]
  enabled = {udp_enabled}
  bind-address = ":{udp_port}"
  database = "db"
  batch-size = 0
  batch-timeout = "0"

[monitor]
  store-enabled = false

[hinted-handoff]
  dir = "{handoff_dir}"
